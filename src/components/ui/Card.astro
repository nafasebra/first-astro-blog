---
interface Props {
	title: string;
	body: string;
	href: string;
	tags: string[];
}

const { href, title, body, tags } = Astro.props;
---

<a href={href} class="flex flex-col gap-4 p-6 rounded-lg border border-gray-400/50 hover:bg-gray-400/20 transition-colors">
	<h2 class="mt-0 pt-0 text-xl">
		{title}
		<span>&rarr;</span>
	</h2>
	<p class="text-gray-400">
		{body}
	</p>
	<div class="flex flex-wrap gap-3">
		{
			tags.length ? (
				tags.map((tag) => <div class="bg-gray-500/50 py-1 px-3 text-sm rounded-lg text-white/70">{tag}</div>)
			) : null
		}	
	</div>
</a>
